{
    "mqtt": {
        "broker": "tcp://some.domain:1883",
        "username": "someuser",
        "password": "somepassword"
    },
    "builtin": {
        "backlight": {
            "enable": true,
            "temperature": false
        }
    },
    "lights": [
        {
            "info": {
                "name": "Desktop Monitor",
                "id": "monitor"
            },
            "command": [
                "./scripts/monitor.sh",
                "command"
            ],
            "command_state": [
                "./scripts/monitor.sh",
                "command-state"
            ],
            "command_color_temp": [
                "./scripts/monitor.sh",
                "color-temp"
            ],
            "command_color_temp_state": [
                "./scripts/monitor.sh",
                "color-temp-state"
            ],
            "command_brightness": [
                "./scripts/monitor.sh",
                "brightness"
            ],
            "brightness_scale": 100,
            "command_brightness_state": [
                "./scripts/monitor.sh",
                "brightness-state"
            ]
        }
    ],
    "switches": [
        {
            "info": {
                "name": "Dark Mode",
                "id": "dark-mode",
                "icon": "mdi:theme-light-dark"
            },
            "command_on": [
                "./scripts/run-in-user-session.sh",
                "./scripts/theme.sh",
                "set",
                "dark"
            ],
            "command_off": [
                "./scripts/run-in-user-session.sh",
                "./scripts/theme.sh",
                "set",
                "light"
            ],
            "command_state": [
                "./scripts/run-in-user-session.sh",
                "./scripts/theme.sh",
                "get"
            ],
            "update_interval": 1
        }
    ],
    "sensors": [
        {
            "info": {
                "name": "Work Duration",
                "id": "work-duration"
            },
            "command_state": [
                "./scripts/run-in-user-session.sh",
                "gsettings",
                "get",
                "org.gnome.pomodoro.state",
                "timer-state-duration"
            ],
            "unit_of_measurement": "seconds",
            "update_interval": 1
        },
        {
            "info": {
                "name": "Work Started",
                "id": "work-started"
            },
            "command_state": [
                "./scripts/run-in-user-session.sh",
                "/bin/bash",
                "-c",
                "gsettings get org.gnome.pomodoro.state timer-state-date | sed \"s/'//g\""
            ],
            "update_interval": 1
        }
    ],
    "binary_sensors": [
        {
            "info": {
                "name": "Work Mode",
                "id": "work-mode-desktop"
            },
            "command_state": [
                "./scripts/run-in-user-session.sh",
                "/bin/bash",
                "-c",
                "if [[ $(gsettings get org.gnome.pomodoro.state timer-state) == \"'pomodoro'\" ]]; then echo -n 'ON'; else echo -n 'OFF'; fi"
            ],
            "update_interval": 1
        },
        {
            "info": {
                "name": "Work Mode Paused",
                "id": "work-mode-paused-desktop"
            },
            "command_state": [
                "./scripts/run-in-user-session.sh",
                "/bin/bash",
                "-c",
                "if [[ $(gsettings get org.gnome.pomodoro.state timer-state) == \"'pomodoro'\" ]] && [[ $(gsettings get org.gnome.pomodoro.state timer-paused) == 'true' ]]; then echo -n 'ON'; else echo -n 'OFF'; fi"
            ],
            "update_interval": 1
        }
    ]
}