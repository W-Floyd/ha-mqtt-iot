{
    "mqtt": {
        "broker": "tcp://some.domain:1883",
        "username": "someuser",
        "password": "somepassword"
    },
    "builtin": {
        "backlight": {
            "enable": true,
            "temperature": false
        }
    },
    "lights": [
        {
            "info": {
                "name": "Desktop Monitor",
                "id": "monitor"
            },
            "command": [
                "./scripts/monitor.sh",
                "command"
            ],
            "command_state": [
                "./scripts/monitor.sh",
                "command-state"
            ],
            "command_color_temp": [
                "./scripts/monitor.sh",
                "color-temp"
            ],
            "command_color_temp_state": [
                "./scripts/monitor.sh",
                "color-temp-state"
            ],
            "command_brightness": [
                "./scripts/monitor.sh",
                "brightness"
            ],
            "brightness_scale": 100,
            "command_brightness_state": [
                "./scripts/monitor.sh",
                "brightness-state"
            ]
        }
    ],
    "switches": [
        {
            "info": {
                "name": "Dark Mode",
                "id": "dark-mode",
                "icon": "mdi:theme-light-dark"
            },
            "command_on": [
                "/home/william/.theme.sh",
                "set",
                "dark"
            ],
            "command_off": [
                "/home/william/.theme.sh",
                "set",
                "light"
            ],
            "command_state": [
                "/home/william/.theme.sh",
                "get"
            ],
            "update_interval": 10
        },
        {
            "info": {
                "name": "Monitor Awake",
                "id": "desktop-monitor-awake",
                "icon": "mdi:monitor"
            },
            "command_on": [
                "xset",
                "dpms",
                "force",
                "on"
            ],
            "command_off": [
                "xset",
                "dpms",
                "force",
                "off"
            ]
        }
    ],
    "sensors": [
        {
            "info": {
                "name": "Current Time",
                "id": "current-time"
            },
            "command_state": [
                "date",
                "+%s"
            ],
            "update_interval": 2
        }
    ],
    "binary_sensors": [
        {
            "info": {
                "name": "Work Mode",
                "id": "work-mode-desktop",
                "device_class": "moving"
            },
            "command_state": [
                "/bin/bash",
                "-c",
                "if [[ $(gsettings get org.ubuntubudgie.plugins.takeabreak paused) == 'true' ]]; then echo -n 'OFF'; else echo -n 'ON'; fi"
            ],
            "update_interval": 10,
            "force_update": true
        }
    ]
}